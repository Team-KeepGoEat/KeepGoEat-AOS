<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeepGoEat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.System1" parent="">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
    </style>

    <style name="TextAppearance.System2" parent="">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
    </style>

    <style name="TextAppearance.System3" parent="">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
    </style>

    <style name="TextAppearance.System4" parent="">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
    </style>

    <style name="TextAppearance.System5" parent="">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
    </style>

    <style name="TextAppearance.System6" parent="">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
    </style>

    <style name="TextAppearance.System1_Bold" parent="">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.System2_Bold" parent="">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.System3_Bold" parent="">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.System4_Bold" parent="">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.System5_Bold" parent="">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <style name="TextAppearance.System6_Bold" parent="">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/pretendard_b</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Toolbar" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingHorizontal">@dimen/spacing16</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <!-- Circle Image View -->
    <style name="Style.CircleImageView.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>